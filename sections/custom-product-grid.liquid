   function createSizeDropdown(sizes) {
    const selectDiv = document.createElement('div');
    selectDiv.className = 'select';
    selectDiv.tabIndex = 1;

    const defaultOption = document.createElement('input');
    defaultOption.className = 'selectopt';
    defaultOption.type = 'radio';
    defaultOption.name = 'test';
    defaultOption.checked = true;

    const defaultLabel = document.createElement('label');
    defaultLabel.htmlFor = 'test';
    defaultLabel.className = 'option';
    defaultLabel.textContent = 'Choose your size';

    selectDiv.appendChild(defaultOption);
    selectDiv.appendChild(defaultLabel);

    sizes.forEach((size) => {
      const input = document.createElement('input');
      input.className = 'selectopt';
      input.type = 'radio';
      input.name = 'test';
      input.id = size;

      const label = document.createElement('label');
      label.htmlFor = size;
      label.className = 'option';
      label.textContent = size;

      selectDiv.appendChild(input);
      selectDiv.appendChild(label);
    });

    return selectDiv;
  }
</script>
