        .mainDiv {
            position: relative;
            width: 220px;
            height: 50px;
            overflow: hidden;
        }

        .coloredDiv {
            position: absolute;
            left: -100%;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 245, 68, 1);
            transition: left 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .buttonDiv {
            display: flex;
            width: 100%;
            height: 100%;
            background: black;
            align-items: center;
            padding: 10px 20px;
            box-sizing: border-box;
            transition: box-shadow 0.6s ease;
        }

        .buttonDiv a {
            display: flex;
            flex: 3;
            color: #fff;
            text-decoration: none;
            align-items: center;
            justify-content: center;
            z-index: 1;
            transition: color 0.6s ease, transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .customHeaderImage {
            flex: 1;
            height: 25%;
            width: 25%;
            transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .mainDiv:hover .coloredDiv {
            left: 0;
        }

        .mainDiv:hover .buttonDiv a,
        .mainDiv:hover .buttonDiv .customHeaderImage {
            transform: translateX(10px);
        }

        .mainDiv:hover .buttonDiv a {
            color: #000;
        }

        .mainDiv:hover {
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        }
</style>
