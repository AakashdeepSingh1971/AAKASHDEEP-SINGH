{{ 'custom-banner.css' | asset_url | stylesheet_tag }}
<!-- Linking the custom CSS file for styling the banner -->

<header>
  <div class="custom_header">
    <!-- Mobile menu toggle button -->
    <div onclick="openMenu()" id="mobile">
      <!-- Cross icon for closing the menu -->
      <img
        src="{{'cross.svg'| asset_url}}"
        class="customHeaderImage cross"
        height="100%"
        width="100%"
      >
      <!-- Hamburger icon for opening the menu -->
      <img
        src="{{'hamburger-icon.svg'| asset_url}}"
        class="customHeaderImage hamburger-icon"
        id="mobile"
        height="100%"
        width="100%"
      >
    </div>

    <!-- Header section heading and subheading -->
    <h2>{{ section.settings.header_heading }}</h2>
    <p id="desktop">{{ section.settings.header_subheading }}</p>

    <!-- Main header content displayed on desktop -->
    <div class="header-mainDiv" id="desktop">
      <div class="header-coloredDiv"></div>
      <div class="header-buttonDiv">
        <!-- Button with customizable text and link -->
        <a href="{{section.settings.header_button_link}}">
          {{ section.settings.header_button_text }}
        </a>
        <span class="header-customHeaderImage">&#8594;</span>
        <!-- Right arrow icon -->
      </div>
    </div>
  </div>
</header>

<!-- Mobile menu drawer -->
<div class="mobile_drower">
  <!-- Repeated subheading for mobile view -->
  <p>{{ section.settings.header_subheading }}</p>

  <!-- Button section for mobile -->
  <div class="header-mainDiv">
    <div class="header-coloredDiv"></div>
    <div class="header-buttonDiv">
      <a href="{{section.settings.header_button_link}}">
        {{ section.settings.header_button_text }}
      </a>
      <span class="header-customHeaderImage">&#8594;</span>
      <!-- Right arrow icon -->
    </div>
  </div>
</div>

<!-- Banner section with heading, subheading, and images -->
<div class="custom-banner">
  <div class="forDesktop">
    <!-- Image displayed on desktop -->
    <img
      src="{{'Frame.svg'| asset_url}}"
      class="customHeaderImage"
      id="desktop"
      height="100%"
      width="100%"
    >
  </div>

  <!-- Main content for banner -->
  <div class="parentDiv">
    <!-- Left section with heading, subheading, and button -->
    <div class="leftside">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>

      <!-- Button section for desktop -->
      <div class="mainDiv" id="desktop">
        <div class="coloredDiv"></div>
        <div class="buttonDiv">
          <a href="{{section.settings.button_link}}">
            {{ section.settings.button_text }}
          </a>
          <div class="customHeaderImage">&#8594;</div>
          <!-- Right arrow icon -->
        </div>
      </div>
    </div>

    <!-- Right section with images for desktop and mobile -->
    <div class="rightside">
      <img
        src="{{'FrameSamll.svg'| asset_url}}"
        class="customHeaderImage"
        id="desktop"
        height="100%"
        width="100%"
      >
      <img
        src="{{'FrameMobile.svg'| asset_url}}"
        class="customHeaderImage"
        id="mobile"
        height="100%"
        width="100%"
      >

      <!-- Button section for mobile -->
      <div class="mainDiv" id="mobile">
        <div class="coloredDiv"></div>
        <div class="buttonDiv">
          <a href="{{section.settings.button_link}}">
            {{ section.settings.button_text }}
          </a>
          <div class="customHeaderImage">&#8594;</div>
          <!-- Right arrow icon -->
        </div>
      </div>
    </div>
  </div>

  <!-- Footer section with customizable text -->
  <div class="custom_footer">
    {{ section.settings.footer_text }}
  </div>
</div>

<script>
  // JavaScript function to toggle the mobile menu
  function openMenu() {
    const ham = document.querySelector('.customHeaderImage.hamburger-icon');
    const cross = document.querySelector('.customHeaderImage.cross');
    const drawer = document.querySelector('.mobile_drower');
    const banner = document.querySelector('.custom-banner');
    const body = document.body;

    // If the drawer is open, close it
    if (drawer.classList.contains('open')) {
      drawer.classList.add('closing');
      drawer.classList.remove('open');
      body.classList.remove('drawer-open');
      ham.style.display = 'block';
      cross.style.display = 'none';
      setTimeout(() => {
        drawer.classList.remove('closing');
      }, 1200);
    } else {
      // Otherwise, open the drawer
      drawer.classList.add('open');
      body.classList.add('drawer-open');
      ham.style.display = 'none';
      cross.style.display = 'block';
    }
  }
</script>

