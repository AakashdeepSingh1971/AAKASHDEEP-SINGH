<header class="custom_header">
  <h2>{{ section.settings.header_heading }}</h2>
  <p>{{ section.settings.header_subheading }}</p>

  <div class="mainDiv">
    <div class="coloredDiv"></div>
    <div class="buttonDiv">
      <a href="{{section.settings.header_button_link}}">
        {{ section.settings.header_button_text }}
      </a>
      <img
        src="{{'arrow.svg'| asset_url}}"
        class="customHeaderImage"
        alt="Arrow icon"
        height="25%"
        width="25%"
      >
    </div>
  </div>
</header>
<div class="custom-banner">
  <div>
    <img
      src="{{'Frame.svg'| asset_url}}"
      class="customHeaderImage"
      height="100%"
      width="100%"
    >
  </div>
  <div class="parentDiv">
    <div class="leftside">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <div class="mainDiv">
        <div class="coloredDiv"></div>
        <div class="buttonDiv">
          <a href="{{section.settings.button_link}}"> {{ section.settings.button_text }} </a>
          <img
            src="{{'arrow.svg'| asset_url}}"
            class="customHeaderImage"
            alt="Arrow icon"
            height="25%"
            width="25%"
          >
        </div>
      </div>
    </div>
    <div class="rightside">
      <img
        src="{{'FrameSamll.svg'| asset_url}}"
        class="customHeaderImage"
        height="100%"
        width="100%"
      >
    </div>
  </div>
  <div class="custom_footer">
    {{ section.settings.footer_text }}
  </div>
</div>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "header_heading",
      "label": "Header Heading",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "text",
      "id": "header_subheading",
      "label": "Header Subheading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "header_button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    }, {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    }, {
      "type": "text",
      "id": "subheading",
      "label": "subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    }, {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    }, {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }, {
      "type": "url",
      "id": "header_button_link",
      "label": "Button Link"
    }

  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

