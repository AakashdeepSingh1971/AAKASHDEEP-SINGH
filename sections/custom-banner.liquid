{{ 'custom-banner.css' | asset_url | stylesheet_tag }}

<header>
  <div class="custom_header">
    <div onclick="openMenu()">
      <img
        src="{{'cross.svg'| asset_url}}"
        class="customHeaderImage cross"
        height="100%"
        width="100%"
      >
      <img
        src="{{'hamburger-icon.svg'| asset_url}}"
        class="customHeaderImage hamburger-icon"
        id="mobile"
        height="100%"
        width="100%"
      >
    </div>

    <h2>{{ section.settings.header_heading }}</h2>
    <p id="desktop">{{ section.settings.header_subheading }}</p>

    <div class="header-mainDiv" id="desktop">
      <div class="header-coloredDiv"></div>
      <div class="header-buttonDiv">
        <a href="{{section.settings.header_button_link}}">
          {{ section.settings.header_button_text }}
        </a>

        <span class="header-customHeaderImage">&#8594;</span>
      </div>
    </div>
  </div>
</header>
<div class="mobile_drower">
  <p id="">{{ section.settings.header_subheading }}</p>
  <div class="header-mainDiv" id="">
    <div class="header-coloredDiv"></div>
    <div class="header-buttonDiv">
      <a href="{{section.settings.header_button_link}}">
        {{ section.settings.header_button_text }}
      </a>

      <span class="header-customHeaderImage">&#8594;</span>
    </div>
  </div>
</div>
<div class="custom-banner">
  <div class="forDesktop">
    <img
      src="{{'Frame.svg'| asset_url}}"
      class="customHeaderImage"
      id="desktop"
      height="100%"
      width="100%"
    >
  </div>
  <div class="parentDiv">
    <div class="leftside">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <div class="mainDiv" id="desktop">
        <div class="coloredDiv"></div>
        <div class="buttonDiv">
          <a href="{{section.settings.button_link}}"> {{ section.settings.button_text }}</a>
          <div class="customHeaderImage">&#8594;</div>
        </div>
      </div>
    </div>
    <div class="rightside">
      <img
        src="{{'FrameSamll.svg'| asset_url}}"
        class="customHeaderImage"
        id="desktop"
        height="100%"
        width="100%"
      >

      <img
        src="{{'FrameMobile.svg'| asset_url}}"
        class="customHeaderImage"
        id="mobile"
        height="100%"
        width="100%"
      >
      <div class="mainDiv" id="mobile">
        <div class="coloredDiv"></div>
        <div class="buttonDiv">
          <a href="{{section.settings.button_link}}"> {{ section.settings.button_text }}</a>
          <div class="customHeaderImage">&#8594;</div>
        </div>
      </div>
    </div>
  </div>
  <div class="custom_footer">
    {{ section.settings.footer_text }}
  </div>
</div>
<script>
  function openMenu() {
    const ham = document.querySelector('.customHeaderImage.hamburger-icon');
    const cross = document.querySelector('.customHeaderImage.cross');
    const drawer = document.querySelector('.mobile_drower');
    const banner = document.querySelector('.custom-banner');
    const body = document.body;

    if (drawer.classList.contains('open')) {
      drawer.classList.add('closing');
      drawer.classList.remove('open');
      body.classList.remove('drawer-open');


        drawer.classList.remove('closing');

        ham.style.display = 'block';
        cross.style.display = 'none';

    } else {

      drawer.classList.add('open');
      body.classList.add('drawer-open');
      ham.style.display = 'none';
      cross.style.display = 'block';
    }
  }
</script>
