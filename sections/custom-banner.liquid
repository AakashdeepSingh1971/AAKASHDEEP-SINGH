
<header class="custom_header">
    <div>
        <img src="{{'logo.svg'| asset_url}}" class="customHeaderImage" height="100%" width="100%">
      </div>
  <p>{{ section.settings.header_subheading }}</p>
  <a href="{{section.settings.button_link}}" class="aniamted_button">
    {{
      section.settings.header_button_text
    }}
  </a>
</header>
<div class="custom-banner">
    <div>
        <img src="{{'Frame.svg'| asset_url}}" class="customHeaderImage" height="100%" width="100%">
      </div>
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
  <a href="{{section.settings.button_link}}" class="aniamted_button">
    {{
      section.settings.button_text
    }}
  </a>

</div>


{% schema %}
  {
    "name": "Custom Banner",
    "settings": [
      {
        "type": "text",
        "id": "header_heading",
        "label": "Header Heading",
        "default": "TISSO VISON"
      },
// add image in header heading 
      {
        "type": "text",
        "id": "header_subheading",
        "label": "Header Subheading",
        "default": "Find the ideal gift for your loved ones."
      },
      {
        "type": "text",
        "id": "header_button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "The Gift Guide"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "subheading",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Custom Banner",
        "category": "Custom Sections"
      }
    ]
  }

{% endschema %}

<style>
  .custom_header {
    display: flex;
    align-items: center;
    background-color: rgba(245, 245, 245, 1);
    justify-content: space-between;
    padding: 10px 50px;
    height: 64px;
  }
  .custom_header p {
    font-family: Jost;
    font-size: 16px;
    font-weight: 400;
    line-height: 13.42px;
    text-align: center;
  }
</style>

